<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProdutoActivity">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_consultar_produto"
            style="@style/button_consulta_produto"
            android:layout_marginTop="140dp"
            android:text="@string/consulta_produto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_adicionar_produto"
            style="@style/button_adicionar_produto"
            android:layout_marginTop="72dp"
            android:text="@string/adiciona_produto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_consultar_produto" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_editar_produto"
            style="@style/button_edita_produto"
            android:layout_marginTop="72dp"
            android:text="@string/editar_produto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_adicionar_produto" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_remover_produto"
            style="@style/button_excluir_produto"
            android:layout_marginTop="72dp"
            android:text="@string/excluir_produto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_editar_produto" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>